                <div class="main-content">
                    <div class="section__content section__content--p30">
                        <div class="container-fluid">










                            <div class="row">
                                <div class="container">
                                    <div class="row">
                                        <h2 class="text-center mt-3">Product offer management</h2>
                                        {{!-- <div class="col-sm-6" style="margin-left: 3px;">
                                            <button class="btn btn-primary btn-xs" style="margin-bottom: 10px"
                                                onclick="window.location.href='/admin/addproductform'">ADD
                                                PRODUCT</button>
                                        </div> --}}
                                    </div>
                                    <div class="row">
                                        <div class="col-md-12">


                                            <table id="datatable" class="table table-striped table-bordered"
                                                cellspacing="0" width="100%">
                                                <thead>
                                                    <tr>
                                                        <th>Name</th>
                                                        <th>Image</th>
                                                        {{!-- <th>Description</th> --}}
                                                        <th>Catogery</th>
                                                        <th>Brand</th>
                                                        
                                                        <th>Price</th>
                                                        <th style="color: rgb(225, 65, 172);">Offer Price</th>
                                                        <th>Offer ststus</th>
                                                        <th>Add offer</th>
                                                        <th>Function</th>
                                                    </tr>
                                                </thead>

                                                <tbody>

                                                    {{#each product}}
                                                    <tr>
                                                        <td>{{this.productname}}</td>
                                                        <td><img style="width: 60px; height: 80px;"
                                                                src="/productimages/1{{this._id}}.jpeg" alt=""></td>
                                                        {{!-- <td>{{this.productdescription}}</td> --}}
                                                        <td>{{this.category}}</td>
                                                         <td>{{this.brand}}</td>
                                                        
                                                        <td>{{this.productprice}}</td>
                                                        <td style="color: rgb(225, 65, 172);">{{this.productofferprice}}</td>
                                                        <td>{{this.prodoffer}}</td>
                                                        <td><button class="btn btn-primary btn-xs"
                                                                {{!-- onclick="window.location.href='/admin/addofferprice?proid={{this._id}}'">Add offer price</button> --}}
                                                                 onclick="window.location.href='/admin/addofferprice?proid={{this._id}}&prodprice={{this.productprice}}'">Add offer price</button>
                                                        </td>
                                                        
                                                    {{#if this.productofferprice}}
                                                           {{#if this.prodoffer}}
                                                        <td><button class="btn btn-danger btn-xs"
                                                                onclick="return confirm ('youre disabling offer!!')?window.location.href='/admin/disableandenable?proid={{this._id}}&prodprice={{this.productprice}}&status=false' : ''">Disable</button>
                                                                {{!-- <a href="/productlist?category={{this.category}}&value=1">{{this.category}}</a> --}}
                                                        </td>
                                                           {{else}}
                                                        <td><button class="btn btn-success btn-xs"
                                                                onclick="return confirm ('youre Enabling of!!')?window.location.href='/admin/disableandenable?proid={{this._id}}&prodprice={{this.productprice}}&status=true' : ''">Activate</button>
                                                                {{!-- <a href="/productlist?category={{this.category}}&value=1">{{this.category}}</a> --}}
                                                        </td>
                                                           {{/if}}
                                                    {{else}}
                                                        <td></td>
                                                    {{/if}}



                                                    </tr>
                                                    {{/each}}
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>


                            </div>

                            <div class="modal fade" id="delete" tabindex="-1" role="dialog" aria-labelledby="edit"
                                aria-hidden="true">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <button type="button" class="close" data-dismiss="modal"
                                                aria-hidden="true">×</button>
                                            <h4 class="modal-title custom_align" id="Heading">Delete this entry</h4>
                                        </div>
                                        <div class="modal-body">

                                            <div class="alert alert-danger"><span
                                                    class="glyphicon glyphicon-warning-sign"></span>
                                                Are you
                                                sure you want to delete this Record?</div>

                                        </div>
                                        <div class="modal-footer ">
                                            <button type="button" class="btn btn-default" data-dismiss="modal"><span
                                                    class="glyphicon glyphicon-remove"></span> No</button>
                                            <button class="btn btn-outline-danger my-2 my-sm-0"
                                                type="submit">Delete</button>
                                        </div>
                                    </div>
                                    <!-- /.modal-content -->
                                </div>
                                <!-- /.modal-dialog -->
                            </div>













                        </div>
                    </div>
                </div>
