                                                                onclick="return confirm('are you sure you want bring back this order!!')?window.location.href='/admin/cancelorder/{{this._id}}/undo' : ''">Undo cancel</button>
                                                        </td>
                                                        {{else}}
                                                        <td><button class="btn btn-success btn-xs"  name="cancel"
                                                                onclick="return confirm('are you sure you want cancel this order!!')?window.location.href='/admin/cancelorder/{{this._id}}/cancel' : ''">Cancel Order</button>
                                                        </td>
                                                        {{/if}}

                                                    </tr>
                                              

                                                </tbody>
                                                     {{/each}}
                                            </table>
                                       
                                        </div>
                                    </div>
                                </div>


                            </div>

