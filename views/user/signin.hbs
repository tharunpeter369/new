    <script>
        setTimeout(function () {
            document.getElementById("invalid").innerHTML = "";
        }, 4000);



            document.signinform.addEventListener("submit", function (event) {
            var name = this.querySelector("input[id=useremail]").value;
            var pass = this.querySelector("input[id=userpassword]").value;

            if (name.trim() == "" || name.length < 3) {
                document.getElementById("useremail").focus();
                event.preventDefault();
            } else if (pass.trim() == "" || pass.length < 3) {
                document.getElementById("userpassword").focus();
                event.preventDefault();
            }
        });


        function emailValid() {
            var text = document.getElementById("useremail").value;
            var letters = /^[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,4}$/;

            if (text == "") {
                document.getElementById("emailErr").innerHTML = " required";
                //   document.getElementById("nameLen").style.display = "none";
                //   document.getElementById("nameErr").style.display = "none";
            }
            else if (!text.match(letters)) {
                document.getElementById("emailErr").innerHTML = "Valid email required";

                // document.getElementById("emailErr").style.display = "block";
                // document.getElementById("emailReq").style.display = "none";
                //   document.getElementById("nameLen").style.display = "none";

            }
            else {
                document.getElementById("emailErr").innerHTML = " ";
                //   document.getElementById("nameErr").style.display = "none";

            }
        }


        function passValid() {
            var text = document.getElementById("userpassword").value;
            var letters = /^[a-zA-Z\s]*$/;
            if (text.length == 0) {
                // document.getElementById("nameLen").style.display = "block";
                document.getElementById("passLen").innerHTML = "required ";
                // document.getElementById("nameErr").style.display = "none";
            } else if (text.length < 3) {

                document.getElementById("passLen").innerHTML = "Minimum Length required";

            } else {

                document.getElementById("passLen").innerHTML = " ";

            }
        }


